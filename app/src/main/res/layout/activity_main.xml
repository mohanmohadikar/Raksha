<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F3000000"
    android:orientation="vertical"
    tools:context="com.mohan.raksha.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_height="400dp">
                    <include layout="@layout/activity_contact_info"/>
                </android.support.v7.widget.CardView>


            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="#E2FFFFFF"
                        android:textSize="17sp"
                        android:text=" Are you in trouble? Are you being followed? "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-thin"
                        android:textColor="#E2FFFFFF"
                        android:textSize="17sp"
                        android:text=" Eve teased? Harassed? "/>


                </LinearLayout>




            </RelativeLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp">



                    <ImageView
                        android:id="@+id/scream"
                        android:src="@drawable/play"
                        android:layout_centerInParent="true"
                        android:layout_width="63dp"
                        android:layout_height="63dp"/>


                    <ImageView

                        android:id="@+id/stop"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/pause"
                        android:visibility="invisible" />


                </RelativeLayout>




                <ImageView
                    android:id="@+id/alert"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:src="@drawable/call" />



                <ImageView
                    android:id="@+id/send"

                    android:layout_below="@+id/alert"
                    android:src="@drawable/send"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="50dp"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    />



            </LinearLayout>




        </LinearLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="#E2FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginBottom="7dp"
                    android:text="Stay safe"/>


            </LinearLayout>




        </RelativeLayout>








    </RelativeLayout>










</LinearLayout>