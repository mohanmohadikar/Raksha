<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/drawer_layout"
                                        android:fitsSystemWindows="true"
                                        android:background="@drawable/womanalone1"
                                        tools:context="com.example.mohanmohadikar.raksha.MainActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/test"
                android:id="@+id/imageView"/>


        <TextView
                android:text="@string/main1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:id="@+id/textView"/>
        <TextView
                android:text="@string/main2"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"/>
        <TextView
                android:text="@string/main3"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"/>
        <Button
                android:id="@+id/alert"

                android:text="@string/i_m_in_danger"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="50dp"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:background="@drawable/contact"
        />

        <Button
                android:id="@+id/scream"

                android:text="@string/scream"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="@color/screambutt"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:background="@drawable/scream"
        />
        <Button

                android:text="@string/stop"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="@color/screambutt"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:background="@drawable/scream"
                android:id="@+id/stop"/>


    </LinearLayout>

    <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/navigationview"
            android:layout_gravity ="start"
            app:menu="@menu/drawer_menu"
    />





</android.support.v4.widget.DrawerLayout>