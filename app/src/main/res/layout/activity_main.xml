<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/drawer_layout"
                                        android:fitsSystemWindows="true"
                                        android:background="@drawable/gradient"
                                        tools:context="com.example.mohanmohadikar.raksha.MainActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/test"
                android:id="@+id/imageView"/>
        <Button
                android:id="@+id/cl"
                android:text="@string/contact_list"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="#dd3c68"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="180dp"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:background="@drawable/cl"/>




        <Button
                android:id="@+id/update"
                android:text="@string/update_contact"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="#da356b"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:background="@drawable/update" />


        <Button
                android:id="@+id/call"

                android:text="@string/contact_police"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="#d82f6f"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:background="@drawable/call"
        />



        <Button
                android:id="@+id/alert"

                android:text="@string/alert"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="#d52b72"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:background="@drawable/contact"
        />

        <Button
                android:id="@+id/scream"

                android:text="@string/scream"
                android:fontFamily="cursive"
                android:textAllCaps="false"
                android:textColor="#d32577"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:background="@drawable/scream"
        />


    </LinearLayout>

    <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/navigationview"
            android:layout_gravity ="start"
            app:menu="@menu/drawer_menu"
    />





</android.support.v4.widget.DrawerLayout>