<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:padding="10dp"
                                        android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                      android:layout_height="match_parent">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/person128" android:id="@+id/personimg"
                    android:layout_weight="1" android:contentDescription="@string/personimg">

            </ImageView>
            <TextView
                    android:text="TextView"
                    android:layout_marginLeft="50dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/cardtext" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>